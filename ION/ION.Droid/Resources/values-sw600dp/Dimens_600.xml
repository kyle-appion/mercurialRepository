<resources>
  <!--
This directory is used to contain older 7 inch tablet sized dimensions. So far this file affects the following devices:

	Nexus 7 Tablet

-->

  <!--
  START MATERIAL DESIGN DIMENSIONS
  These dimensions are the constant dimensions that android recommends for good
  material design.
  -->

  <!--
  MD: ACTIVITY ALIGNMENT
  NOTE: The following section is used for standard display layouts such as the
  PTChart activity, ShSc activity or a job editor. This should not necessarily
  apply to the ViewerFragment or the AnalyzerFragment.
  -->
  <!-- The universal padding for activity content. -->
  <dimen name="keyline_1">16dp</dimen>
  <!-- The universal padding for activity content where the activity is starved for space. -->
  <dimen name="keyline_1_minus_8">8dp</dimen>
  <!-- The universal left justified line that content (not title) should align to. -->
  <dimen name="keyline_2_content">72dp</dimen>
  <!-- The universal left justified line that titles of content should align to. -->
  <dimen name="keyline_2_title">56dp</dimen>

  <!-- GENERAL DIMENSIONS -->
  <dimen name="padding">5dp</dimen>
  <dimen name="nav_padding">10dp</dimen>
  <dimen name="thin_separator">1dp</dimen>
  <dimen name="thick_separator">2dp</dimen>

  <!--
  MD: TEXT SIZE
  NOTE: The following section is used EXPLICITLY for general content text sizing.
  -->
  <!-- The text size for super small text that the user should almost never need. -->
  <dimen name="text_size_tiny">10sp</dimen>
  <!-- The text size for small text. -->
  <dimen name="text_size_small">12sp</dimen>
  <!-- The text size for medium text. This is generally content text. -->
  <dimen name="text_size_medium">14sp</dimen>
  <!-- The text size for large text. This is generally header text. -->
  <dimen name="text_size_large">16sp</dimen>
  <!-- The text size for a very large text. This is generally header text. -->
  <dimen name="text_size_xlarge">20sp</dimen>
  <!-- The text size for very large text. This is generally title text. -->
  <dimen name="text_size_title">24sp</dimen>

  <!--
  Navigation Drawer Dimensions
  -->
  <dimen name="navigation_drawer_width">320dp</dimen>

  <!--
  END MATERIAL DESIGN DIMENSIONS
  -->

  <!-- Content dimensions -->
  <dimen name="icon_very_large">55dp</dimen>
  <dimen name="icon_large">45dp</dimen>
  <dimen name="icon_medium">30dp</dimen>
