<?xml version="1.0" encoding="UTF-8" ?>

<resources>
  <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    <item name="android:actionButtonStyle">@style/IONActionButton</item>
    <item name="android:windowBackground">@drawable/img_bgd_carbon</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textColorPrimary">@color/white</item>
    <item name="android:textColorSecondary">@color/light_gray</item>
    <item name="android:textColorTertiary">@color/white</item>
    <item name="android:buttonStyle">@style/IONButton</item>
  </style>

  <style name="TerminalActivityTheme" parent="android:Theme.Holo.Light.DarkActionBar">
    <item name="android:windowBackground">@color/white</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textColorSecondary">@color/light_gray</item>
    <item name="android:textColorTertiary">@color/light_gray</item>
    <item name="android:buttonStyle">@style/IONButton</item>
  </style>

  <style name="DialogActivityTheme" parent="android:style/Theme.Holo.Light.Dialog">
    <item name="android:windowBackground">@color/white</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:buttonStyle">@style/IONButton</item>    
  </style>

  <style name="IONButton" parent="android:Widget.Button">
    <item name="android:background">@drawable/selector_button_gold_black</item>
    <item name="android:gravity">center</item>
    <item name="android:textColor">@drawable/selector_text_blackgold</item>
  </style>

  <style name="IONActionButton" parent="@android:style/Widget.Holo.Light.ActionButton">
    <item name="android:minWidth">80dip</item>
    <item name="android:paddingLeft">40dip</item>
    <item name="android:paddingRight">0dip</item>
  </style>
</resources>