<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!-- Instrument Model -->
        <android.support.design.widget.TextInputLayout
            android:theme="@style/IONTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/instrumentModel"
                android:theme="@style/IONTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Instrument Model" />
        </android.support.design.widget.TextInputLayout>
    <!-- Instrument Serial Number -->
        <android.support.design.widget.TextInputLayout
            android:theme="@style/IONTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/instrumentSerialNumber"
                android:theme="@style/IONTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Instrument Serial Number" />
        </android.support.design.widget.TextInputLayout>
    <!-- Instrument Accuracy -->
        <android.support.design.widget.TextInputLayout
            android:theme="@style/IONTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/instrumentAccuracy"
                android:theme="@style/IONTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:hint="Instrument Accuracy" />
        </android.support.design.widget.TextInputLayout>
        <DatePicker
            android:id="@+id/datePicker"
            android:minDate="01/01/2014"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <!-- Certified By -->
        <android.support.design.widget.TextInputLayout
            android:theme="@style/IONTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/certifiedBy"
                android:theme="@style/IONTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="Certified By" />
        </android.support.design.widget.TextInputLayout>
    <!-- E-mail To -->
        <android.support.design.widget.TextInputLayout
            android:theme="@style/IONTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/sendTo"
                android:theme="@style/IONTextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:hint="E-mail To" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</ScrollView>